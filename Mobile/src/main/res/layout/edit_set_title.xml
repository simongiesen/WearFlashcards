<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    tools:context=".EditSetTitle">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edit_set_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Base">

        <EditText
            android:id="@+id/edit_set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set_title_hint"
            android:inputType="textCapWords"
            android:theme="@style/AppTheme.Base" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_set_layout"
        android:layout_below="@+id/edit_set_layout"
        android:onClick="editSetTitle"
        android:text="@string/save" />

</RelativeLayout>
