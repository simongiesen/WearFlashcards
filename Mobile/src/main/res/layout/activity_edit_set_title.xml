<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingTop="@dimen/activity_vertical_padding"
        tools:context=".activities.EditSetTitleActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_edit_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Base">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_set_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_set_title"
                android:inputType="textCapWords|textMultiLine"
                android:isScrollContainer="true"
                android:theme="@style/AppTheme.Base" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/layout_edit_set"
            android:layout_below="@+id/layout_edit_set"
            android:onClick="editSetTitle"
            android:text="@string/button_save" />
    </RelativeLayout>
</ScrollView>