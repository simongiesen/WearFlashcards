<?xml version="1.0" encoding="utf-8"?>
<!-- Based on sample layout from
     http://developer.android.com/training/wearables/ui/layouts.html -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_dark"
    android:paddingBottom="75dp"
    android:paddingTop="75dp">

    <FrameLayout
        android:id="@+id/layout_card_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background"
        android:padding="5dp">

        <ScrollView
            android:id="@+id/scroll_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_card_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textSize="38sp" />
        </ScrollView>

        <ScrollView
            android:id="@+id/scroll_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/text_card_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </ScrollView>
    </FrameLayout>
</FrameLayout>