<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ImportSetsActivity">

    <LinearLayout
        android:id="@+id/layout_import_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_starred_only"
        android:paddingEnd="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_horizontal_padding">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:enabled="false"
            android:paddingEnd="16dp"
            android:paddingStart="0dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/text_import_sets_title"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_import_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_import_heading" />
</RelativeLayout>