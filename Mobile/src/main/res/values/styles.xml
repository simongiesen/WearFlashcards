<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_selected</item>
        <item name="android:windowBackground">@color/background_default</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/color_primary</item>
    </style>

    <!-- Remove toolbar shadow from MainActivity in pre-Lollipop devices -->
    <style name="Theme.MainActivity" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- EditText theme -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/color_edit</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <!-- Transparent theme for the loading dialogs -->
    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
