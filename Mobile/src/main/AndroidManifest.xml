<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericfabreu.wearflashcards">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.NewSetActivity"
            android:label="@string/title_activity_create_set"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".activities.EditSetTitleActivity"
            android:label="@string/title_activity_edit_set"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".activities.NewCardActivity"
            android:label="@string/title_activity_create_card"
            android:parentActivityName=".activities.SetOverviewActivity"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".activities.EditCardActivity"
            android:label="@string/title_activity_edit_card"
            android:parentActivityName=".activities.SetOverviewActivity"
            android:windowSoftInputMode="stateVisible" />

        <activity
            android:name=".activities.SetOverviewActivity"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.StudySetActivity"
            android:parentActivityName=".activities.SetOverviewActivity" />

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <provider
            android:name=".data.FlashcardProvider"
            android:authorities="com.ericfabreu.wearflashcards.app"
            android:exported="false"
            android:grantUriPermissions="true"
            android:label="FlashcardProvider" />

        <service android:name=".sync.WearableService">
            <intent-filter>
                <!-- Listen only for messages -->
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/WearFlashcards"
                    android:scheme="wear" />
            </intent-filter>
        </service>
    </application>
</manifest>
