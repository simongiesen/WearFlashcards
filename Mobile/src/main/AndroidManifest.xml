<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericfabreu.wearflashcards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.FlashcardProvider"
            android:authorities="com.ericfabreu.wearflashcards.app"
            android:exported="false"
            android:grantUriPermissions="true"
            android:label="FlashcardProvider" />

        <activity
            android:name=".activities.NewSetActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name=".NewSet" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EditSetTitleActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.MainActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name=".EditSetTitle" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewCardActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.SetOverviewActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name=".NewCard" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EditCardActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.SetOverviewActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name=".EditCard" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SetOverviewActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.MainActivity">
            <intent-filter>
                <action android:name=".SetOverview" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StudySetActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.SetOverviewActivity">
            <intent-filter>
                <action android:name=".StudySet" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".sync.WearableService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <!-- Listeners receive events that match the action and data filters -->
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
    </application>

</manifest>
