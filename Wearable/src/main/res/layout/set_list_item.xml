<?xml version="1.0" encoding="utf-8"?>
<com.ericfabreu.wearflashcards.WearableListItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/list_item_description"
        android:src="@drawable/wl_circle" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center_vertical|start"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/list_text"
        android:textSize="16sp" />
</com.ericfabreu.wearflashcards.WearableListItemLayout>