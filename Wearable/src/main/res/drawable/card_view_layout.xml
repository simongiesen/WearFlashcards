<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Shadow -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/card_shadow" />

            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="0dp"
                android:top="1dp" />
        </shape>
    </item>

    <!-- Card -->
    <item>
        <shape>
            <solid android:color="@color/background_card_default" />
        </shape>
    </item>
</layer-list>